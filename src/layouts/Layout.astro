---
import "../styles/global.css";

const {
  title = "Arthur Larkin",
  description = "Portfolio and blog.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <header class="container header">
      <nav class="nav card">
        <a class="brand" href="/">Arthur Larkin	| @arthu1rrr</a>
        <div class="nav-links">
          <a href="/projects">Projects</a>
          <a href="/blog">Blog</a>
        </div>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="container footer">
      <div class="foot card">
        <p>Â© {new Date().getFullYear()} Arthur Larkin</p>
    
      </div>
    </footer>

    <style>
      .nav{
        display:flex;
        align-items:center;
        justify-content:space-between;
        padding: 14px 16px;
      }
      .brand{ font-weight: 900; letter-spacing: -0.02em; }
      .footer{ padding-top: 10px; padding-bottom: 40px; }
      .foot{ display:flex; justify-content:space-between; gap: 10px; padding: 14px 16px; }
      .small{ font-size: 13px; }
      @media (max-width: 700px){
        .foot{ flex-direction: column; }
      }
    </style>
  </body>
</html>
